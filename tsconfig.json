{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist",
        "lib": ["esnext", "dom"],
        "module": "es2015",
        "target": "es2015",
        "esModuleInterop": true,
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "noEmitOnError": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
